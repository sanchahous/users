@import '../../../styles/mixins/grid.styl'

.cardRow
  width: 84%;
  &Wrap
    display flex
    justify-content space-between
    max-width 800px
    margin 20px auto 0 auto
    background #ffffff
    padding 16px
.usersUpdate
  &BackgroundWrap
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
  &DotsLeft,
  &DotsRight,
  &Circle,
  &CircleSmall,
  &Rectangle,
  &Triangle
    position absolute
  &DotsLeft
    top: auto;
    bottom: -11%;
    left: 4%;
  &DotsRight
    top: auto;
    bottom: 10%;
    right: 4%;
    height: 350px;
  &Circle
    top: 10%;
    left: 7%;
  &CircleSmall
    top auto
    bottom 20px
    right 15%
  &Rectangle
    top: 18%;
    left: 65%;
  &Triangle
    top 0
    right 0

  &IconsFillLight
    fill #EAE8F4
  &IconsFillDark
    fill #EAE8F4
  &IconsFillWhite
    fill #ffffff

//RESPONSIVE
@media media-query-tablet
  .usersUpdate
    &BackgroundWrap
      display none
@media media-query-mobile
  .cardRow
    width 100%
    &Wrap
      display flex
      flex-direction column
      justify-content flex-start
    &Btn
      margin-bottom 8px
