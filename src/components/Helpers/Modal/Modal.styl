.outer {
  display: flex;
  justify-content center
  align-items center
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0, 0.6);
}


.inner {
  margin 0 auto
  width: 480px;
  padding 30px
  background #ffffff
  box-shadow: 0 5px 15px rgba(0,0,0,.5);
  display flex
  justify-content center
  align-items center
}

.textBlock {
  margin-right: 20px;
  max-width: calc(100% - 81px);
  word-break: break-all;
}
