@import '../../../_styles/_mixins/grid.styl'

.breadcrumb
  padding: 10px 16px;
  list-style: none;
  background: #ffffff;
  max-width 800px
  margin 60px auto 24px auto
  &Item
    display: inline;
    font-size: 16px;

  & .breadcrumbItem+.breadcrumbItem:before
    padding: 8px;
    color: black;
    content: "/\00a0";

  &Link
    color: #0275d8;
    text-decoration: none;
    font-size: 16px;
    background rgba(0,0,0, 0)
    padding 0
    box-shadow none
    height auto
    line-height 1
    font-weight 400
    text-transform none
    &:hover
      color: #01447e;
      background rgba(0,0,0, 0)
      text-decoration: underline;
      box-shadow none
      transform none
//RESPONSIVE
@media media-query-mobile
  .breadcrumb
    width 100%
    padding 16px
    margin-top 20px
    &Item
      font-size 12px
    &Link
      font-size 12px
