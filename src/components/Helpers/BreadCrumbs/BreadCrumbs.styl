@import '../../../_styles/_mixins/grid.styl'

.breadcrumb
  padding: 10px 16px;
  list-style: none;
  background: #ffffff;
  max-width 800px
  margin 72px auto 24px auto
  &Item
    display: inline;
    font-size: 16px;

  & .breadcrumbItem+.breadcrumbItem:before
    padding: 8px;
    color: black;
    content: "/\00a0";

  &Link
    color: #0275d8;
    text-decoration: none;
    font-size: 16px;
    &:hover
      color: #01447e;
      text-decoration: underline;

//RESPONSIVE
@media media-query-mobile
  .breadcrumb
    width 100%
    padding 16px
    margin-top 20px
    &Item
      font-size 12px
    &Link
      font-size 12px
