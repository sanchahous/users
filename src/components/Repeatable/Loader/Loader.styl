.loader
  width:400px;
  height:400px;
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  &Wrap
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.8);

.blobStart,.blobEnd
  width:70px;
  height:70px;
  position:absolute;
  background:#fff;
  border-radius:50%;
  top:50%;left:50%;
  transform:translate(-50%,-50%);

.blobStart
  left:20%;
  animation:osc-l 2.5s ease infinite;

.blobEnd
  left:80%;
  animation:osc-r 2.5s ease infinite;
  background:#d9d5ec;

@keyframes osc-l
  0%{left:20%;}
  50%{left:50%;}
  100%{left:20%;}

@keyframes osc-r
  0%{left:80%;}
  50%{left:50%;}
  100%{left:80%;}

