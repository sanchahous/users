@import 'mixins/grid.styl'

.usersTable
  border: 1px solid #ccc;
  width: 100%;
  margin:0;
  padding:0;
  border-collapse: collapse;
  border-spacing: 0;
  box-shadow: 0 10px 50px rgba(0, 0, 0, 0.2);
  border-radius: 0;
  background #ffffff
  &Wrap
    text-align: center;
    display: flex;
    flex-direction: column;
    padding: 2rem 2rem;
    color: #000;
    position: relative;
    max-width: 1280px;
    margin: 0 auto 0 auto;
    padding-top: 70px;
  &Caption
    margin 0
    color #6E6893
    &Wrap
      display flex
      justify-content space-between
      align-items center
      background #ffffff
      padding 16px
      width 100%
  &Col
    padding: 16px 0 16px 20px;
    color: #25213b;
    font-weight: 500;
    vertical-align: middle;
    line-height: 1;
    word-break: break-all;
  &Row
    border-bottom 1px solid #D9D5EC
    &:hover
      background: #F2F0F9;
  &Row, &Col
    text-align: left;
  &HeadRow
    background: #f4f2ff;
    border: 1px solid #D9D5EC;
    padding-bottom 8px
  &HeadCol
    text-align left
    &:nth-child(1),
    &:nth-child(2),
    &:nth-child(3),
    &:nth-child(4),
    &:nth-child(5)
      width 19%
    &:nth-child(6),
    &:nth-child(7)
      min-width 60px
  &HeadLabel
    color: #6E6893;
    font-weight 500
    font-size: 12px;
    letter-spacing: 1px;
    text-transform uppercase
    padding 8px 20px 8px 20px
  &TextLight
    font-weight 400
    color #6E6893
    font-size 14px


//RESPONSIVE
@media media-query-tablet
  .usersTable
    border: 0;
    &Wrap
      padding 20px 15px
    &Head
      display: none;
    &Row
      margin-bottom: 10px;
      display: block;
      border-bottom: 2px solid #ddd;
    &Col
      display: block;
      text-align: right;
      font-size: 12px;
      border-bottom: 1px dotted #ccc;
      border-right: 1px solid transparent;
      color: #25213B;
      text-transform none
      letter-spacing 1px
      padding: 8px;
      font-weight 400
      &:last-child
        border-bottom: 0;
      &:before
        content: attr(data-label);
        float: left;
        text-transform: none;
        font-weight: bold;
    &TextLight
      font-weight 400
      color: #25213B;
