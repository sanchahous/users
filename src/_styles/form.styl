@import '_mixins/grid.styl'

.form
  width 100%
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32px;
  max-width: 800px;
  margin: 0 auto;
  &Wrap
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    padding-top: 72px;
  &Row
    display flex
  &Group
    width: 320px;
    position: relative;
    padding: 4px 0;
  &Control
    width: 100%;
    display: inline-block;
    border-bottom: 1px solid #ADABB9;
    border-radius: 0;
    box-sizing: border-box;
    padding 8px 20px 0 20px
    height 48px
    outline: none;
    transition: all 0.2s linear;
    background: rgba(0,0,0,0) !important;
    font-size: 16px;
    &:hover, &:focus
      border-color: rgba(0,0,0, 0);
      box-shadow: 0 2px 0 #1682d4;
    &::-webkit-input-placeholder
      color: #bdbdbd;
      font-weight 500
      font-size 16px
    &::-moz-placeholder
      color: #bdbdbd;
      font-weight 500
      font-size 16px
    &:-ms-input-placeholder
      color: #bdbdbd;
      font-weight 500
      font-size 16px
    &:-moz-placeholder
      color: #bdbdbd;
      font-weight 500
      font-size 16px
    &Error
      border-color: #D30000;
      box-shadow: none;
      &:hover, &:focus
        border-color: red;
        box-shadow: none;
  &Label
    position: absolute;
    top: 8px;
    left: 10px;
    transform: translateY(-50%);
    background: rgba(0,0,0, 0);
    color: #ADABB9;
    font-size: 16px;
    font-weight: 500;
    z-index: 1;
    right: initial;
    text-transform none
  &Icon
    position: absolute;
    top: 0;
    bottom: 0;
    left: 15px;
    margin: auto 0;
    &Fill
      fill #C6C2DE
  &PhoneControlWrap
    .formControl
      width: 100%;
      border: 0;
      border-bottom: 1px solid #aaa;
      border-radius: 0;
      line-height: 1;
      height 56px
      padding-bottom 8px
      background: rgba(0,0,0,0) !important;

.selectArrow
  width 20px
  height 20px
  position absolute
  right 0
  top 50%
  margin-top -8px
  transition all 0.2s linear
  &_expanded
    transform rotate(180deg)

.select
  display: block;
  font-size: 16px;
  font-weight: 500;
  color: #444;
  line-height: 1.3;
  padding: 16px 10px 10px 10px;
  max-width: 100%;
  box-sizing: border-box;
  margin: 0;
  border-left 0
  border-right 0
  border-top: 0
  border-bottom: 1px solid #aaa;
  box-shadow: none;
  border-radius: 0;
  appearance: none;
  background: #fff;
  background-repeat: no-repeat, repeat;
  background-size: .65em auto, 100%;
  width: 130px;
  cursor pointer
  transition all 0.2s linear
.select::-ms-expand
  display: none;

/* Hover style */
.select:hover
  border-color: rgba(0,0,0, 0);
  box-shadow: 0 2px 0 #1682d4;

/* Focus style */
.select:focus
  border-color: #aaa;
  /* It'd be nice to use -webkit-focus-ring-color here but it doesn't work on box-shadow */
  box-shadow: none;
  color: #222;
  outline: none;

/* Set options to normal weight */
.select option
  font-weight:normal;

.select:disabled:hover, .select[aria-disabled=true]
  border-color: #aaa;

.inputError
    border-color #D30000
.errorText
  &Wrap
    width: 320px;
    margin-bottom: 16px;
  &Item
    color #EE0004
    font-size 12px

//RESPONSIVE
@media media-query-mobile
  .form
    width 100%
    padding 16px
    &Wrap
      padding-top 0
    &Control
      height 38px
      font-size 14px
    &PhoneControlWrap
      .formControl
        height 38px
        font-size 14px
    &Label
      font-size: 14px
  .errorText
    &Wrap
      width 100%
      padding-left: 20px;
    &Item
      font-size 10px
