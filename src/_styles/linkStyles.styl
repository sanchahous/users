.link
  position: relative;
  color: #1682d4;
  text-decoration: none;
  font-weight 400
  font-size: 16px;
  text-align center
  &::before
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -6px;
    left: 0;
    background-color: #1682d4;
    visibility: hidden;
    transform: scaleX(0);
    transition: all 0.3s ease-in-out 0s;
  &:hover::before
    visibility: visible;
    transform: scaleX(1);
  &_bottomSpace
    margin-bottom 20px
  &__wrapper
    display flex
    justify-content center

.button
  box-shadow: none;
  border: none;
  color: #ffffff;
  padding: 6px 12px;
  border-radius: 4px;
  cursor pointer
  transition all 0.2s linear
  outline none
  &_blue
    background: #08adec;
  &:hover
    background #0692c7
  &:focus
    outline none

