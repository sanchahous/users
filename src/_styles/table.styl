.usersTable
  border: 1px solid #ccc;
  width: 100%;
  margin:0;
  padding:0;
  border-collapse: collapse;
  border-spacing: 0;
  box-shadow: 0 10px 50px rgba(0, 0, 0, 0.2);
  border-radius: 8px;
  background #ffffff
  &Wrap
    text-align: center;
    display: flex;
    flex-direction: column;
    padding: 2rem 2rem;
    color: #000;
    position: relative;
    width: 1280px;
    margin: 0 auto;
  &BackgroundWrap
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
  &Col
    padding 20px 0 20px 20px
    color #25213B
    font-weight 500
  &Row
    border-bottom 1px solid #D9D5EC
  &Row, &Col
    text-align: left;
  &HeadRow
    background: #f4f2ff;
    border: 1px solid #D9D5EC;
    padding-bottom 8px
  &HeadCol
    text-align left
  &HeadLabel
    color: #6E6893;
    font-weight 500
    font-size: 12px;
    letter-spacing: 1px;
    text-transform uppercase
    padding 8px 20px 8px 20px
  &IconsFillLight
    fill #E9E6F5
  &IconsFillDark
    fill #EAE8F4
  &DotsLeft,
  &DotsRight,
  &Circle,
  &CircleSmall,
  &Rectangle,
  &Triangle
    position absolute
  &DotsLeft
    top auto
    bottom 0
    left 0
  &DotsRight
    top auto
    bottom 10%
    right 0
  &Circle
    top 20px
    left 20px
  &CircleSmall
    top auto
    bottom 20px
    right 15%
  &Rectangle
    top 30px
    left 50%
  &uTriangle
    top 0
    right 0



@media screen and (max-width: 600px)
  .table
    border: 0;
    &Head
      display: none;
    &Row
      margin-bottom: 10px;
      display: block;
      border-bottom: 2px solid #ddd;
    &Col
      display: block;
      text-align: right;
      font-size: 13px;
      border-bottom: 1px dotted #ccc;
      border-right: 1px solid transparent;
      &:last-child
        border-bottom: 0;
      &:before
        content: attr(data-label);
        float: left;
        text-transform: uppercase;
        font-weight: bold;
