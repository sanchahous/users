.table
  border: 1px solid #ccc;
  width: 100%;
  margin:0;
  padding:0;
  border-collapse: collapse;
  border-spacing: 0;
  &Wrap
    text-align: center;
    display: inline-block;
    background-color: #fff;
    padding: 2rem 2rem;
    color: #000;
  &Row
    border: 1px solid #ddd;
    padding: 5px;
  &Row, &Col
    padding: 10px;
    text-align: center;
    border-right: 1px solid #ddd;
  &HeadCol
    color: #fff;
    background-color: #444;
    text-transform: uppercase;
    font-size: 14px;
    letter-spacing: 1px;


@media screen and (max-width: 600px)
  .table
    border: 0;
    &Head
      display: none;
    &Row
      margin-bottom: 10px;
      display: block;
      border-bottom: 2px solid #ddd;
    &Col
      display: block;
      text-align: right;
      font-size: 13px;
      border-bottom: 1px dotted #ccc;
      border-right: 1px solid transparent;
      &:last-child
        border-bottom: 0;
      &:before
        content: attr(data-label);
        float: left;
        text-transform: uppercase;
        font-weight: bold;
